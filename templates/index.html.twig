{% extends 'layout.html.twig' %}
{% block body %}
    <div class="row align-items-start" style="margin-top: 100px">
        <div class="col"></div>
        <div class="col-md-auto">Hello Please enter your amount on 10 multiple number :) </div>
        <div class="col"></div>
    </div>
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col-md-auto" style="margin-top: 50px">
           <div class="input-group mb-3">
               <input type="number" class="form-control" v-model="amount" v-bind:placeholder="placeholderMessage" aria-label="Amount" aria-describedby="button-addon2">
               <div class="input-group-append">
                   <button class="btn btn-outline-secondary" v-on:click="withdraw" v-bind:disabled="isWithdrawButtonFreezed" type="button" id="button-addon2">Withdraw</button>
               </div>
           </div>
       </div>
        <div class="col"></div>
    </div>

    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col-md-auto" style="margin-top: 50px">
            <div v-show="hasResult">Your amount is: <span v-text="notes" style="color: green"></span> </div>
            <div v-show="hasErrors">You have an error with type: <span v-text="errorType" style="color: red;"></span> and description <span v-text="errorDesc" style="color: red;"></span></div>
        </div>
        <div class="col"></div>
    </div>
{% endblock %}